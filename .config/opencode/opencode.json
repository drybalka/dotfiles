{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine-transparent",
  "autoupdate": false,
  "share": "disabled",
  "permission": {
    "bash": "ask",
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  },
  "lsp": {
    "scala-lsp": {
      "command": [
        "metals"
      ],
      "extensions": [
        ".scala",
        ".sc"
      ]
    }
  },
  "formatter": {
    "scalafmt": {
      "command": [
        "scalafmt",
        "$FILE"
      ],
      "extensions": [
        ".scala",
        ".sc"
      ]
    }
  },
  "keybinds": {
    "leader": "ctrl+ ",
    "command_list": "<leader>space",
    "session_list": "<leader>s",
    "input_submit": "ctrl+return",
    "input_newline": "return",
    "input_backspace": "ctrl+h,backspace",
    "input_delete": "ctrl+l,delete",
    "input_delete_to_line_start": "ctrl+k",
    "input_delete_to_line_end": "ctrl+j",
    "input_delete_word_backward": "ctrl+w",
    "input_delete_word_forward": "ctrl+e",
    "input_move_left": "alt+h,left",
    "input_move_right": "alt+l,right",
    "input_line_home": "alt+k",
    "input_line_end": "alt+j",
    "input_word_backward": "alt+w,ctrl+left",
    "input_word_forward": "alt+e,ctrl+right",
    "history_previous": "ctrl+p,up",
    "history_next": "ctrl+n,down",
    "messages_next": "ctrl+i",
    "messages_previous": "ctrl+o",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
  }
}