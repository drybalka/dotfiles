{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": false,
  "share": "disabled",
  "permission": {
    "bash": {
      "grep": "allow"
    },
    "edit": "ask"
  },
  "keybinds": {
    "leader": "ctrl+space",
    "input_submit": "ctrl+enter",
    "input_newline": "enter",
    "messages_previous": "ctrl+p",
    "messages_next": "ctrl+n",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  }
}