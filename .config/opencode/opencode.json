{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "autoupdate": false,
  "share": "disabled",
  "permission": {
    "bash": "ask",
  },
  "keybinds": {
    "leader": "ctrl+ ",
    "command_list": "<leader>space",
    "input_submit": "ctrl+return",
    "input_newline": "return",
    "input_backspace": "ctrl+h,backspace",
    "input_delete": "ctrl+l,delete",
    "input_delete_to_line_start": "ctrl+k",
    "input_delete_to_line_end": "ctrl+j",
    "input_line_home": "ctrl+b",
    "input_line_end": "ctrl+e",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d",
  }
}