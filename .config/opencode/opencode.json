{
  "$schema": "https://opencode.ai/config.json",
  "theme": "rosepine",
  "autoupdate": false,
  "share": "disabled",
  "permission": {
    "bash": "ask",
  },
  "keybinds": {
    "leader": "ctrl+space",
    "command_list": "<leader>space",
    "input_submit": "ctrl+enter",
    "input_newline": "enter",
    "input_clear": "ctrl+k",
    "messages_half_page_up": "ctrl+u",
    "messages_half_page_down": "ctrl+d"
  }
}