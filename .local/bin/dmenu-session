#!/bin/bash
# This script calls dmenu session manager

# Print dmenu options and execute command
cmd=$( echo -e "reboot\nlock\nreload\nexit\npoweroff" | bemenu -p "")
case $cmd in
	lock) swaylock -f -e -i $HOME/.cache/wallpaper-large;;
	reload) swaymsg reload;;
	exit) swaymsg exit;;
	reboot) systemctl reboot -i;;
	poweroff) systemctl poweroff -i;;
	*)
esac
